mavici=#003F93
Light=#005DE1
azul-intenso=#1874FF
zoolander=#5CA3FF
blue-boy=#D7E1FF

body
	background-color blue-boy
	font-family Roboto
	font-weight 300

footer
	background-color mavici
	color blue-boy
	display block
	padding 20px
	box-sizing border-box
	
footer div p
		color blue-boy
	
h2
	color mavici
	font-family Roboto
	font-weight 500
	margin 0 
	padding 0
	/*border-bottom 3px solid azul-intenso	*/

h3 
	display block
	text-align center
	
header 
	-moz-background: linear-gradient(to right, Light, blue-boy, Light)
	-webkit-background: linear-gradient(to right, Light, blue-boy, Light)
	background: linear-gradient(to right, Light, blue-boy, Light)
	box-sizing: border-box
	display block
	padding 55px 0 0 0
	position relative
	text-align center
	width 100%

input 
	display block
	width 98%
	border-radius 5px
	border 1px solid Light
	margin 0 0 10px 0
	padding 5px

nav
	position fixed
	/*background-color Light*/
	background rgba(0,93,225,.8)
	width 100%
	top 0
	padding 0
	color blue-boy
	text-align center
	/*margin-left auto
	margin-right auto
	right 0
	left 0*/
	display none
	z-index 9
	
	ul 
		margin 0 
		padding 0

	ul li 
		display inline-block
		width 100%
		text-decoration none
		margin 0 0
		padding 0
		
		a 
			/*border 2px solid mavici*/
			display inline-block
			padding 24px 15px
			/*border-radius 10px*/
			background-color Light
			margin 5px 0
			font-size 25px
			font-weight 300
			text-decoration none
			border 1px solid blue-boy
			border-radius 10px
		
		a:hover
			background-color mavici
			color mavici
			text-decoration none
		
		a:visited
			color blue-boy
		
		a:active
			color blue-boy
p 
	color mavici

section
	box-sizing border-box
	display inline-block
	margin 0
	/*padding 15px 10px */

	h2
		text-align center
	div 
		padding 15px 15px
		margin 0
.block
	display block
	
.botonMenu
	position fixed
	z-index 10
	top 10px
	color blue-boy
	font-size 25	px
	right 10px
	display inline-block
	background rgba(0,93,225,.6)
	/*background-color mavici*/
	border-radius 5000px
	border 0
	padding 5px 10px

.icon-footer
	text-align left
	display inline-block
	vertical-align top

.ilustracion
	background url('../images/factory.jpg')
	height 300px
	background-size cover

.ilustracion2
	background url('../images/glases.jpg')
	height 300px
	background-size cover

.item-caja
	width 200px
	height 200px
	padding 0
	margin 15px
	position relative
	transition padding 1s ease
	&:hover
		p 
			padding 30px 5px		
	
	img 
		width 200px
		margin 0
		padding 0
	
	p 
		background rgba(24,116,255, .7)
		width 100%
		padding 5px
		margin 0
		box-sizing border-box
		color blue-boy
		font-weight 400
		position absolute
		z-index 3
		bottom 1px

.item-footer
	display block
	width 250px
	margin 0 auto
	p
		display inline-block
		width 220px
		margin 0 0 10px 10px

.divImpar
	background-color mavici
	
	p
		color blue-boy
	
	h2
		color blue-boy
.marginTop
	display none
	
.mensaje
	position absolute
	bottom 30px	
	right 30px
	background rgba(24,116,255,.5)
	border-radius 15px
	
	p 
		font-size 20px
		color blue-boy
		padding 0px 10px

.productos, .productos2 
	text-align center
	display block
	
	p 
		text-align center
		
	ul 
		margin 0 
		padding 0
		
		li 
			display inline-block
			text-decoration none
			margin 0 0 5px 0
			
			/*img 
				width 200px
				padding 5px
				margin 5px*/

.propiedades img 
	width 100%		

.headerSlide
	margin 0
	padding 0
	width 100%
	height 200px
	background url('../images/slide/slideImage2.jpg')
	background-size cover
	overflow hidden
	-webkit-background-size: cover;
	-moz-background-size: cover;
	-o-background-size: cover;
	
	img 
		margin 0
		padding 0
		width 100%
	
	ul 
		padding 0
		margin 0
		display flex
		width 700%
		animation deslizar 35s infinite alternate ease
	
	li
		list-style none
		width 100%

.menu
	background-color Light
	
.logo
	background-color blue-boy
	border-radius 10px
	box-sizing border-box
	display inline-block
	left 0
	margin 5px
	margin-left auto
	margin-right auto
	position absolute
	right 0
	text-align center
	top 1px
	width 200px
	
.logo img
	width 175px

