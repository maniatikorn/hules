mavici=#003F93
Light=#005DE1
azul-intenso=#1874FF
zoolander=#5CA3FF
blue-boy=#D7E1FF

body
	background-color blue-boy
	font-family Roboto
	font-weight 300

footer
	background-color mavici
	color blue-boy
	
h2
	color mavici
	font-family Roboto
	font-size 35px
	font-weight 700
	margin 0 
	padding 0
	
header 
	-moz-background: linear-gradient(to right, mavici, blue-boy, mavici)
	-webkit-background: linear-gradient(to right, mavici, blue-boy, mavici)
	background: linear-gradient(to right, mavici, blue-boy, mavici)
	box-sizing: border-box
	display block
	padding 55px 0 0 0
	position relative
	text-align center
	width 100%

nav
	display none

p 
	color mavici

section
	box-sizing border-box
	display inline-block
	margin 0
	/*padding 15px 10px */

	h2
		text-align center
	div 
		padding 15px 10px

.divImpar
	background-color mavici
	
	p
		color blue-boy
	
	h2
		color blue-boy

.productos
	text-align center
	display block
	
	p 
		text-align left
		
	ul 
		margin 0 
		padding 0
		
		li 
			display inline-block
			text-decoration none
			margin 0 0 5px 0
			
			img 
				width 150px
				padding 5px
				margin 5px
		

.headerSlide
	margin 0
	padding 0
	width 100%
	height 200px
	background url('../images/slide/slideImage2.jpg')
	background-size cover
	-webkit-background-size: cover;
	-moz-background-size: cover;
	-o-background-size: cover;
	
	img 
		margin 0
		padding 0
		width 100%

.menu
	background-color Light
	
.logo
	background-color blue-boy
	border-radius 10px
	box-sizing border-box
	display inline-block
	left 0
	margin 5px
	margin-left auto
	margin-right auto
	position absolute
	right 0
	text-align center
	top 1px
	width 225px
	
.logo img
	width 200px

.productList a 
	background-color mavici
	color blue-boy
	padding 10px
	border-radius 5px
	font-size 16px
	margin 10px
	
.productList a:hover
		background-color azul-intenso
		color blue-boy
