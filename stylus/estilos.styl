mavici=#003F93
Light=#005DE1
azul-intenso=#1874FF
zoolander=#5CA3FF
blue-boy=#D7E1FF

body
	background-color blue-boy
	font-family Roboto
	font-weight 300
	
h2
	font-family Roboto
	font-weight 700
	color mavici
	font-size 40px
	
header 
	-moz-background: linear-gradient(to right, mavici, blue-boy, mavici)
	-webkit-background: linear-gradient(to right, mavici, blue-boy, mavici)
	background: linear-gradient(to right, mavici, blue-boy, mavici)
	box-sizing: border-box
	display block
	padding 55px 0 0 0
	position relative
	text-align center
	width 100%

nav
	display none

section
	display block
	margin 0
	padding 0 10px
	box-sizing border-box
	
	h2
		text-align center

.headerSlide
	width 100%
	margin 0
	padding 0
	
	img 
		margin 0
		padding 0
		width 100%

.menu
	background-color Light
	
.logo
	background-color blue-boy
	border-radius 10px
	box-sizing border-box
	display inline-block
	margin 5px
	position absolute
	text-align center
	top 1px
	width 225px
	left 0
	right 0
	margin-left auto
	margin-right auto
	
.logo img
	width 200px

