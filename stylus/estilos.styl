@media screen and (min-width: 479px)

	.headerSlide
		height 250px
	
	.propiedades
		text-align center
		
		p 
			text-align left
			
		img 
			width 200px

@media screen and (min-width: 639px)		
	
	.headerSlide
		height 300px
	
	.item-footer
		/*display inline-block*/

@media screen and (min-width: 767px)
	footer
		padding 30px 0 0 0
		
	header
		padding 0px
		text-align left
		background-color mavici
	
	input
		width 50%
		margin 0 auto 15px auto
		font-size 25px

	nav
		display inline-block
		position relative
		background rgba(0,93,225,.8)
		margin 90px 0 0 0
		
		ul li
			width auto			

		ul li a 
			font-size 16px
			background-color rgba(0,0,0,0)
			/*border 0px*/

	.botonMenu
		display none
	
	.formulario
		display inline-block

	.headerSlide
		height 350px
		/*display inline-block*/
	
	.logo
		z-index 20
	
	.item-footer
		display inline-block
		vertical-align top
		margin 10px 15px
		border-left 3px solid blue-boy
		padding 0 0 0 5px
		
@media screen and (min-width: 979px)

	nav
		margin 15px 0 0 0
		/*height 70px*/
		position fixed
		text-align right
		
	.headerSlide
		height 600px
		
	.logo
		position fixed
		margin 0 
		padding 0
		top 5px
		left 15px
		width 250px
		box-shadow 5px 5px azul-intenso
		
		img
			width 225px
	
	.marginTop
		height 110px
		padding 0
		margin 0
		display block
		
	.mensaje p 
		font-size 40px
	
	.propiedades		
		p 
			display inline-block
			width 40%
		
		img 
			display inline-block
			width 150px
			margin 5px
			top 20px
		
	
	.productos, .productos2		
		box-sizing border-box
		display inline-block
		vertical-align top
	
	.productos
		width 100%
		
	.productos2
		width 100%
			
	.slide
		margin 0
		padding 0
	
	.servicios, .ilustracion
		display inline-block
		
	.servicios
		width 50%
		box-sizing border-box
		height 300px
	
	.ilustracion
		width 50%
		float right
		box-sizing border-box
		height 300px
	
	.quienes
		width 50%
		box-sizing border-box
		float right
	
	.ilustracion2
		width 50%
		box-sizing border-box

@keyframes deslizar
	0% 
		margin-left 0
	10% 
		margin-left 0
		
	15% 
		margin-left -100%
	25% 
		margin-left -100%
	
	30% 
		margin-left -200%
	40% 
		margin-left -200%
	
	45% 
		margin-left -300%
	55% 
		margin-left -300%
	
	60% 
		margin-left -400%
	70% 
		margin-left -400%
	
	75% 
		margin-left -500%
	100% 
		margin-left -500%
